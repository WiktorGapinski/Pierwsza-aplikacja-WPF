<Window x:Class="WpfProgram_TakNie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProgram_TakNie"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Czy chcesz podwyżkę?" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="24"/>

        <Button x:Name="btnYes" Content="Tak" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50"
                Margin="100,150,0,0" Background="Green" Foreground="White" MouseEnter="btnYes_MouseEnter" FontSize="20" FontFamily="Times New Roman" FontWeight="Bold"/>

        <Button x:Name="btnNo" Content="Nie" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50"
                Margin="300,150,0,0" Background="Red" Foreground="White" FontWeight="Bold" FontSize="20" FontFamily="Times New Roman"/>
    </Grid>
</Window>
